@{
    ViewData["Title"] = "Створення новини";
}
<div class="createNews">
    <form method="post" enctype="multipart/form-data">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4" style="width: 150px; height: 220px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="140" height="140" style="margin: 5px" fill="currentColor" class="bi bi-file-image" viewBox="0 0 16 16">
                        <path d="M8.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                        <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM3 2a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1v8l-2.083-2.083a.5.5 0 0 0-.76.063L8 11 5.835 9.7a.5.5 0 0 0-.611.076L3 12V2z"/>
                    </svg>

                    <input type="file" style="width: 160px" name="img">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <input type="text" class="mb-3" placeholder="Заголовок" style="height: 48px; width: 100%; border-radius: 0.375rem; font-size: 1.25rem" name="title">
                        <input type="text" class="mb-3" placeholder="Новина" style="height: 72px; width: 100%; border-radius: 0.375rem" name="text">
                        <input type="date" class="mb-3" placeholder="Дата створення" style="height: 48px; width: 100%; border-radius: 0.375rem" name="date">
                    </div>
                </div>
            </div>
        </div>
        <input class="btn btn-primary" style="margin-bottom: 15px" type="submit" value="Додати">
        <a href="main.html"><input class="btn btn-primary" style="margin-bottom: 15px" type="submit" value="Закрити"></a>
    </form>
</div>

