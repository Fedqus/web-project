@model Tuple<List<News>, bool>
@{
    ViewData["Title"] = "Новини";
}
<div class="container">
    <h2>Новини</h2>
    <div class="container news">
        @{
            foreach (var news in Model.Item1)
            {
                <div class="card mb-3" style="max-width: 540px">
                    <img src="uploads\@news.ImagePath" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@news.Title</h5>
                        <p class="card-text">@news.Content</p>
                        <p class="card-text"><small class="text-body-secondary">@news.PostDate.ToShortDateString()</small></p>
                    </div>
                </div>
        }}
        @{
        if (Model.Item2)
        {
            <div class="card mb-3 newNews" style="max-width: 540px; ">
                <a asp-controller="News" asp-action="Create"><svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                </svg></a>
                Додати новину
            </div> 
        }
        }
    </div>
</div>

