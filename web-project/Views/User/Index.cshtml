@{
    ViewData["Title"] = "Користувачі";
}
@model List<User>
<h2>Користувачі</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Ім'я</th>
      <th scope="col">Прізвище</th>
      <th scope="col">По батькові</th>
      <th scope="col">Email</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
        @{
            for (int i = 0; i < Model.Count; i++)
            {
                var num = i + 1;
                <tr>
                <th scope="row">@num</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].LastName</td>
                <td>@Model[i].MiddleName</td>
                <td>@Model[i].Email</td>
                <td><a asp-controller="User" asp-action="Profile" asp-route-id="@Model[i].Id">Details</a></td>
            </tr>  
    }}
  </tbody>
</table>